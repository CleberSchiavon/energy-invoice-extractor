{
  "name": "energy-fare-extractor-main",
  "private": true,
  "version": "1.0.0",
  "scripts": {
    "prepare-repo": "bash ./scripts/prepare-repo.sh",
    "clean-repo": "bash ./scripts/clean.sh",
    "build": "turbo build",
    "dev": "dotenv -- turbo run dev",
    "test": "dotenv -- turbo run test",
    "api:dev": "dotenv -- turbo run dev --filter=./apps/api/",
    "api:test": "dotenv -- turbo run test --filter=./apps/api/",
    "api:test-watch": "dotenv -- turbo run test:watch --filter=./apps/api/",
    "api:database-generate": "dotenv -- turbo db:push db:generate",
    "frontend:dev": "dotenv -- turbo run dev --filter=./apps/web/",
    "husky:install": "bash ./scripts/husky.sh",
    "audit:commit": "bash ./scripts/branch-audit.sh",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "lint": "bash ./scripts/lint.sh",
    "changelog": "standard-version"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.3",
    "@commitlint/config-conventional": "^17.6.3",
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "eslint": "^8.40.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "prettier": "^3.2.5",
    "standard-version": "^9.5.0",
    "turbo": "latest",
    "validate-branch-name": "^1.3.0",
    "dotenv-cli": "^7.4.2"
  },
  "packageManager": "pnpm@8.9.0",
  "engines": {
    "node": ">=18"
  },
  "standard-version": {
    "standard-version": {
      "types": [
        {
          "type": "rc",
          "section": "Release"
        },
        {
          "type": "feat",
          "section": "Features"
        },
        {
          "type": "fix",
          "section": "Bug Fixes"
        },
        {
          "type": "hotfix",
          "section": "Bug Fixes"
        },
        {
          "type": "ci",
          "section": "CI"
        },
        {
          "type": "chore",
          "section": "Chores"
        },
        {
          "type": "style",
          "section": "Styles"
        },
        {
          "type": "docs",
          "section": "Documentation"
        },
        {
          "type": "perf",
          "section": "Performance Improvements"
        },
        {
          "type": "refac",
          "section": "Refactorings"
        },
        {
          "type": "revert",
          "section": "Reversal"
        },
        {
          "type": "test",
          "section": "Tests"
        }
      ]
    }
  },
  "dependencies": {
    "solidarity": "^3.0.4"
  }
}