{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "~/app/*": ["./app/*"],
      "~/data/*": ["./data/*"],
      "~/public/*": ["./public/*"],
      "~/client/*": ["./client/*"]
    },
    "baseUrl": "./"
  },
  "include": ["next-env.d.ts", "next.config.js", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
